# Medusa Backend URL (update with your backend URL)
MEDUSA_BACKEND_URL=https://your-backend-domain.com

# Publishable API Key (get from Medusa admin)
NEXT_PUBLIC_MEDUSA_PUBLISHABLE_KEY=pk_test_

# Storefront URL
NEXT_PUBLIC_BASE_URL=https://your-frontend-domain.com

# Default region (ISO-2 lowercase)
NEXT_PUBLIC_DEFAULT_REGION=id

# Stripe public key (optional)
NEXT_PUBLIC_STRIPE_KEY=

# Medusa payments publishable key (optional)
NEXT_PUBLIC_MEDUSA_PAYMENTS_PUBLISHABLE_KEY=

# Medusa payments external account ID (optional)
NEXT_PUBLIC_MEDUSA_PAYMENTS_ACCOUNT_ID=

# Next.js revalidation secret
REVALIDATE_SECRET=your-revalidate-secret-change-this

# Medusa Cloud S3 for image optimization (optional)
MEDUSA_CLOUD_S3_HOSTNAME=
MEDUSA_CLOUD_S3_PATHNAME=

# Node environment
NODE_ENV=production